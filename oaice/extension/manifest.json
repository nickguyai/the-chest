{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Exporter",
  "version": "0.1.0",
  "description": "Extracts your and assistant messages from the ChatGPT web UI and exports them as JSON or text.",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_title": "Export ChatGPT Conversation",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
